<%= render 'shared/content_title', title: 'Login' %>

<section id="contact-page" class="page contact-page page-container">
	<div class="container">
		<div class="row">
			<!-- Post Container -->
			<div id="post-container" class="col-md-12 post-container" role="main">
				<div class="row">
					<div class="col-md-8">
            <%= form_tag '/login' do %>
							<div class="control-group">
                <%= label_tag :username %>
                <%= text_field_tag :username, nil, placeholder: "Your Username", class: "form-control" %>
							</div>
							<div class="control-group">
                <%= label_tag :password %>
                <%= password_field_tag :password, nil, placeholder: "Your Password", class: "form-control" %>
							</div>
              <%= submit_tag 'Login', class: "submit-btn submit md-btn btn" %>
            <% end %>
          </div>
          <div class="col-md-4">
            <h4 class="contact-title">Login </h4>
            <p>
              Finish creating the memorial or make edits to an existing memorial you created.
            </p>
            <p>
              Approve visitor submitted photos and timeline events.
            </p>
          </div>
        </div>
      </div><!-- /.post-container -->
      <!-- Post Container End -->
    </div><!-- /.row -->
  </div><!-- /.container -->
</section><!-- /#contact-page -->
