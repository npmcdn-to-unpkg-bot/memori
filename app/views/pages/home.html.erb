<!-- Articles -->
<section id="" class="about-us">
	<div class="section-padding">
		<div class="container">
			<div class="row">
				<div id="react-blog-posts">
				</div>
			</div><!-- /.row -->
		</div><!-- /.container -->
	</div><!-- /.section-padding -->
</section>

<script type="text/babel">
	var BlogPosts = React.createClass({
		getInitialState() {
			return { posts: [] }
		},

		componentDidMount() {
			$.getJSON('/api/v1/home_posts.json', (response) => {
				this.setState({ posts: response })
			})
		},

		render: function() {
			var posts = this.state.posts.map((post) => {
				return (
					<div className="col-md-3 col-sm-6" key={post.id}>
						<article className="post-content">
							<div className="featured-img">
								<img src={post.picture.url} alt="Image" className="blog-post-image" />
							</div>
							<div className="post-container">
								<h3 className="post-title">
									<a href={ `posts/${post.id}` }>{post.title}</a>
								</h3>
								<small>time place holder</small>
								<p className="post-description">
									{post.summary}
								</p>
							</div>
						</article>
					</div>
				)
			});

			return (
				<div className="BlogPosts">
					<h3 className="section-title">Blog Posts</h3>
					{posts}
				</div>
			);
		}
	});

		ReactDOM.render(
			<BlogPosts />,
			document.getElementById('react-blog-posts')
		);
</script>

<!-- Gallery -->
<section id="gallery" class="gallery">
	<div class="section-padding">
		<div class="container">
			<div class="row">
				<div id="react-gallery-images">
				</div>
			</div><!-- /.row -->
		</div><!--  /.container -->
	</div><!-- /.section-padding -->
</section><!-- /#gallery -->
<!-- Gallery End -->

<script type="text/babel">
	var GalleryImages = React.createClass({
		getInitialState() {
			return { photos: [] }
		},

		componentDidMount() {
			$.getJSON('/api/v1/home_photos.json', (response) => {
				this.setState({ photos: response })
			})
		},

		render: function() {
			var photos = this.state.photos.map((photo) => {
				return (
					<div className="item col-md-4 col-sm-6" key={photo.id}>
					  <div className="gallery-item">
							<img src={photo.picture.url} alt="Image" className="blog-post-image" />
					    <a href={photo.picture.url} title={photo.caption} className="gallery-item-link transition boxer">
					      <div className="hex-container">
					        <div className="hex">
					          <div className="hex-icon"><i className="fa fa-plus"></i></div>
					        </div>
					      </div>
					    </a>
					  </div>
					</div>
				)
			});

			return (
				<div className="GalleryImages">
					<h3 className="section-title">Recent Photos</h3>
					{photos}
				</div>
			);
		}
	});

		ReactDOM.render(
			<GalleryImages />,
			document.getElementById('react-gallery-images')
		);
</script>

