<h4>Add New Event</h4>
  <%= form_for([@memorial, @event], remote: true) do |f| %>
  <div class="control-group">
    <%= f.label :date %>
    <%= f.date_field :date, class: "form-control" %>
  </div>
  <div class="control-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "What event was it?" %>
  </div>
  <div class="control-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5, class: "form-control", placeholder: "What happened and why was it memorable?" %>
  </div>
  <div class="control-group">
    <%= f.label :picture %>
    <%= f.file_field :picture, class: "form-control" %>
  </div>
  <%= f.submit "Add Timeline Event", class: "submit-btn submit md-btn btn" %>
  <% end %>
