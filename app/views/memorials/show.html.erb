<!-- If the user has not choosen a hero image, a default image is shown -->
<% if @memorial.picture.url.nil? %>
<style>
  .hero {
    background-image: url(<%= asset_path 'yes/hero.jpg' %>);
  }
</style>
<% else %>
<style>
  .hero {
    background-image: url(<%= @memorial.picture.url %>);
  }
</style>
<% end %>

<!-- Hero Section -->
<div id="logo"><%= @memorial.name %> <span></span></div>

<section id="top" class="hero" data-type="parallax">
    <header id="main-menu">
        <div class="container">
            <div class="row">
                <div id="menu-logo"></div>
                <nav id="navigation" class="column twelve">
                    <ul>
                        <li class="submenu"><a href="#logo">Home</a></li>
                        <li><a href="#story">Biography</a></li>
                        <li><a href="#timeline">Timeline</a></li>
                        <li><a href="#gallery">Gallery</a></li>
                        <!-- <li><a href="#gift">Condolence Gift</a></li> -->
                        <li><a href="#guestbook">GuestBook</a></li>
                        <li><a href="#contact">Contact</a></li>
                    </ul>
                </nav>
                <a href="#" id="menu-toggle-wrapper">
                    <div id="menu-toggle"></div>
                </a>
            </div>
            <!-- close .ha-header-perspective -->
        </div>
        <!-- close grid container -->
    </header>
    <div class="overlay-dark"></div>
    <div class="container">
        <div class="hero-inner">
            <div class="info">

            </div>
            <a href="#story" class="mouse scrollTo"><i class="fa fa-long-arrow-down"></i></a>
        </div>
    </div>
</section>
<!-- #Hero Section Ends -->


<!-- #### Animated section -->
<div class="loaderOverlay"><i class="fa fa-spinner animate-spin"></i></div>

<section id="home-content" class="top-menu">
    <!-- Story Section -->
    <section id="story" class="pattern">
      <header class="section-header">
          <h3 class="section-title">Biography</h3>
      </header>
        <div class="container timeline">
            <span class="arrow-up"></span>
            <span class="arrow-down"></span>
            <div class="row">
            </div>
            <div class="row">
                <div class="twelve">
                    <div class="box corner quote">
                        <div class="corners-topleft"></div>
                        <div class="corners-bottomleft"></div>
                        <div class="corners-topright"></div>
                        <div class="corners-bottomright"></div>
                        <%= @memorial.biography.html_safe if @memorial.biography? %>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- #Story Section Ends -->

    <!-- Timeline Section -->
    <section id="timeline">
        <header class="section-header">
            <h3 class="section-title">TIMELINE</h3>
            <p class="section-tagline">Here is a collection of the most cherished memories.</p>
        </header>
        <div class="container timeline">
            <span class="arrow-up"></span>
            <span class="arrow-down"></span>
            <div class="row">
                <div class="timeline-year start"><span>EVENTS</span></div>
                  <% @memorial.events.where(published: true).each_with_index do |event,index| %>
                    <div class="column twelve">
                      <div class="column three">
                        <span style="opacity:0">Space</span>
                      </div>
                      <div class="column six">
                          <div class="box pattern">
                              <span class="date"><%= display_month_day_year(event.date) %></span>
                              <h2><%= event.title %></h2>
                              <div class="box-content">
                                <div class="block">
                                  <div class="image-holder">
                                        <%= image_tag event.picture.url(:gallery) %>
                                    </div>
                                    <a href="<%= event.picture.url %>" class="portfolio-hover">
                                        <div class="portfolio-info">
                                            <h3 class="portfolio-title">
                                            </h3>
                                        </div>
                                    </a>
                                </div>
                                  <p><%= event.description %></p>
                                    <br />
                                    <a class="more add-comment-link">Add Comment</a>
                                    <div class="form add-comment-form">
                                      <br />
                                    <%= form_for [@memorial, event, Comment.new], html: {class: "actionform"} do |f| %>
                                      <div class="control-group">
                                        <%= f.text_field :author, class: 'form-control', placeholder: "Your Name" %>
                                      </div>
                                      <div class="control-group">
                                        <%= f.text_area :body, rows: 5, class: 'form-control',  placeholder: "Your Comment" %>
                                      </div>
                                      <div class="clearfix"></div>
                                      <%= f.submit "Leave Entry", class: "color" %>
                                      <div class="clearfix"></div>
                                    <% end %>
                                  </div>
                                    <br />
                                    <div>
                                      <a class="more view-comment-link">View Comments</a>

                                      <div class="comments-listing">
                                        <br />
                                        <% event.comments.each_with_index do |comment,index| %>
                                          <div class="comment-box">
                                              <p><strong><%= comment.author %></strong></p>
                                              <p><%= display_month_day_year(comment.created_at) %></p>
                                              <br />
                                              <p><%= comment.body %></p>
                                          </div>
                                          <br />
                                        <% end %>
                                      </div>
                                    </div>
                              </div>
                          </div>
                      </div>
                      </div>
                    <% end %>
                    </div>

                  <div class="timeline-button">
                    <br />
                    <br />
                    <a href="#" class="button">Load more</a>
                    <br />
                    <br />
                    <a href="#suggest-event" rel="modal:open" class="button">Suggest Event</a>
                  </div>
              </div> <!-- row end -->
          </div> <!-- container end -->
    </section>
    <!-- #Timeline Section Ends -->

    <!-- Modal HTML embedded directly into document -->
    <div id="suggest-event" style="display:none;">
      <%= render 'memorials/event_form' %>
    </div>

    <!-- Small Gallery Section -->
    <section id="gallery" class="pattern">
        <header class="section-header">
            <h3 class="section-title">Photo Gallery</h3>
        </header>
        <div id="gallery-wrapper">
          <% @memorial.photos.where(published: true).each do |photo| %>
            <div class="block">
                <div class="image-holder">
                    <%= image_tag photo.picture.url(:gallery) %>
                </div>
                <a href="<%= photo.picture.url %>" class="portfolio-hover">
                    <div class="portfolio-info">
                        <h3 class="portfolio-title">
                            <%= photo.caption %>
                        </h3>
                    </div>
                </a>
            </div>
          <% end %>
        </div>
    </section>
    <!-- #Small Gallery Section Ends -->

    <% if @memorial.address.present? %>
    <!-- #Map Section -->
    <section id="map-section">
      <header class="section-header">
          <h3 class="section-title">Burial Location</h3>
          <p class="section-tagline">If you would like to visit the cemetery.</p>
      </header>
        <div id="map"></div>
    </section>
    <!-- #Map Section Ends -->
    <% end %>

