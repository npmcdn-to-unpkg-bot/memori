<%= render 'shared/content_title', title: "Blog Post" %>

<section id="cremation-page" class="page cremation-page page-container">
			<div class="container">
				<div class="row">
					<!-- Post Container -->
					<div id="post-container" class="col-md-12 post-container" role="main">
						<article class="post">
							<div class="post-thumbnail">
								<figure>
                  <%= image_tag @post.picture.url if @post.picture? %>
									<figcaption>
										<h1 class="image-caption">
                      <%= @post.title %>
										</h1>
									</figcaption>
								</figure>
							</div><!-- /.post-thumbnail -->
							<div class="post-content">
								<h2 class="post-title">
								</h2>
								<div class="entry">
									<p>
										<%= @post.body.html_safe %>
									</p>
								</div><!-- /.entry -->
							</div><!-- /.post-content -->
						</article><!-- /.post -->
					</div><!-- /.post-container -->
					<!-- Post Container End -->


					
				</div><!-- /.row -->
			</div><!-- /.container -->
		</section><!-- /#cremation-page -->
