<div class="about-right-box">
  <article class="post-content">
    <% cache [post, 'main-content'] do %>
    <div class="row">
      <div class="col-sm-6">
        <div class="featured-img">
          <%= image_tag post.picture.url(:gallery) if post.picture? %>
        </div><!-- /.featured-img -->
      </div>
      <div class="col-sm-6">
        <div class="post-container">
          <h3 class="post-title">
            <%= link_to post.title, post_path(post) %>
          </h3><!-- /.post-title -->
          <div class="post-meta">
            <span class="time"><%= display_datetime(post.created_at) %></span>
          </div><!-- /.post-meta -->
          <p class="post-description">
            <td><%= post.summary %>
          </p>
          <div class="continue-reading pull-left">
            <%= link_to "Read More", post_path(post)  %>
          </div><!-- /.continue-reading -->
        </div><!-- /.post-container -->
      </div>
    </div><!-- /.row -->
    <% end %>
  </article><!-- /.post-content -->
</div><!--  /.about-right-box -->
